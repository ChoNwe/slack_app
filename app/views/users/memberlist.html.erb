
    <div class="row bd">
        <div class="col-xs-3 col-sm-3 col-md-3 hleft">
            <%= render 'listed/left_panel' %>
        </div>
        <div class="col-xs-9 col-sm-9 col-md-9 member">
            
                <header class="row">
                    <div class="col-xs-10 col-sm-10 col-md-10">
                        <h5><%= session[:channel_name]%></h5>
                        <%= link_to "Channel Member List", memberlist_path, class: "mlink" %>
                    </div>
                    
                </header>
                <div class="memberlist1 dframe">  
                        <br>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-4 col-xs-offset-3 col-sm-offset-3 col-md-offset-3">
                            <i class="fa fa-user btn btn-success"></i> <%= @member_list.size %> Members
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3">
                                <%= link_to '',addmember_path, :class=> "fa fa-plus  btn btn-success mlink" %>
                            </div>
                            
                        </div><br>

                        

                        <% @member_list.each do |memberlist|%>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-4 col-xs-offset-3 col-sm-offset-3 col-md-offset-3">
                                    <%= memberlist.user_name %>
                                </div>
                                <div class="col-xs-3 col-sm-3 col-md-3">
                                <%= link_to '',remove_url(:user_id => memberlist.userid),method: :delete,data: {confirm: "You sure?"},:class=> "fa fa-minus  btn btn-danger mlink" %>
                                </div>
                            </div><br>
                        <% end %>
                        <div class="row"> 
                            <div class="col-xs-9 col-sm-9 col-md-7 col-xs-offset-3 col-sm-offset-3 col-md-offset-3">                 
                                <%= will_paginate @member_list %> 
                            </div>
                        </div>                       
                </div>   
            

        </div>
    </div>


