<% provide(:title, "Search Your WorkSpace") %>

<div class="row mpage">
<h1>Join the Slack WorkSpace <span><b><%= @mworkspace[0].workspace_name %></b>ã€€</span></h1>
<br><br>
<div class="col-xs-6 col-sm-6 col-md-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3">
<%= form_for(:muser, url:join_path(:email => params[:email], :workspace_id=> params[:workspace_id])) do |f| %>
<%= render 'shared/error_messages' %>

  <%= f.label :UserName,"UserName:" %>
  <%= f.text_field :user_name, class: 'form-control' %>

  
  <%= f.email_field :email, class: 'form-control', :style => "display: none;" %>

  <%= f.label :Password ,"Password:"%>
  <%= f.password_field :password, class: 'form-control' %> 

  <%= f.label :Password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit "Join", class: "btn btn-primary" %>
<% end %>
</div>
